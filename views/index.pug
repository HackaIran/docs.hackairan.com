extends layout

block head
  link(rel="stylesheet", href="/stylesheets/home.css")

block content
  
  .column.tags
    .header
      img(src="/images/logo.png", alt="HackaDocs logo")

    h4 Categories
    ul.categories
      li.active(data-id='-', data-all='true') All
      -for(let item of categories)
        li(data-id=item._id, title=item.title)=item.title

    h4 Tags
    ul.hashtags
      li.active(data-id='-', data-all='true') All
      -for(let item of tags)
        li=item

  .column.titles
    .header
      input.search-documents(type="text", placeholder="Search Documents")
    ul
      - for (let document of documents) {
        li(data-id=document.uniqueUrl)
          h3= document.name
          span
            time= document.modifiedAt
            span  | 
            span= document.author
          p= document.summary
      - }
    .articles-loading
      .loading-spiner
    
    input(type="hidden" value=selectedItem).selectedDocument

  .column.content
    article
      h1.article-title
      .article-content
    
    .article-loading

  .options
    .option.menu 2
    .option.day-night

block footer
  script(src='/javascripts/home.bundle.js')
