extends layout

block content
    h1 my documents
    .my-documents
        -for(let i = 0; i < userDocs.length; i++)
            .document-item
                .doc-title= userDocs[i].name
                .doc-url= userDocs[i].uniqueUrl
                .doc-category= userDocs[i].category.title
                .doc-summary= userDocs[i].summary
                a(href="user/editDocument/"+userDocs[i].uniqueUrl) Edit
